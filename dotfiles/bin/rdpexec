#!/usr/bin/env expect

# Get the RDP command to run
set command [lindex $argv 0]

# Get the RDP password
set password_file "/etc/nixos/private/rdp_password"
set f [open $password_file]
set rdp_password [read -nonewline $f]
close $f

spawn -ignore HUP xfreerdp -u fg6tqj --app --plugin rail --data '$command' -- localhost
expect {
  Password: {
    send_user "password from $password_file\n"
    send "$rdp_password\r"
  }
  timeout disconnect
}

expect {
  "Do you trust the above certificate? (Y/N)" { send "Y\r"; exp_continue }
  timeout disconnect
}
